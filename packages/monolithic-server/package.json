{
  "name": "@gbraver-burst-network/monolithic-server",
  "version": "0.6.0",
  "main": "local.js",
  "private": true,
  "scripts": {
    "start": "npm-run-all build serve",
    "start:production": "npm-run-all build serve:production",
    "serve": "node build/local.js",
    "serve:production": "node build/production.js",
    "build": "npm-run-all clean type-check lint lint:test test transpile",
    "type-check": "flow check src",
    "lint": "eslint src",
    "lint:test": "eslint test",
    "test": "ava -T 600000",
    "transpile": "babel src -d build/",
    "clean": "rimraf build"
  },
  "author": "Y.Takeuchi",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "gbraver-burst-core": "^1.10.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.0.5",
    "socket.io": "^4.2.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@ava/babel": "^2.0.0",
    "@babel/cli": "^7.15.4",
    "@babel/core": "^7.15.5",
    "@babel/preset-env": "^7.15.4",
    "@babel/preset-flow": "^7.14.5",
    "@babel/register": "^7.15.3",
    "ava": "^3.15.0",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.32.0",
    "eslint-plugin-flowtype": "^5.9.2",
    "flow-bin": "^0.159.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2"
  },
  "ava": {
    "babel": {
      "compileEnhancements": false
    },
    "files": [
      "test/src/**/*.js"
    ],
    "require": [
      "@babel/register"
    ]
  }
}

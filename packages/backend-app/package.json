  "dependencies": {
    "@aws-sdk/client-apigatewaymanagementapi": "^3.888.0",
    "@aws-sdk/client-dynamodb": "^3.888.0",
    "@aws-sdk/client-secrets-manager": "^3.888.0",
    "@aws-sdk/lib-dynamodb": "^3.888.0",
    "@aws-sdk/signature-v4-crt": "^3.888.0",
    "aws-jwt-verify": "^5.1.0",
    "dotenv": "^17.2.2",
    "gbraver-burst-core": "^1.41.0",
    "nanoid": "^5.1.5",
    "ramda": "^0.31.3",
    "rimraf": "^6.0.1",
    "uuid": "^13.0.0",
    "zod": "^4.1.8"
  },
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@babel/preset-env": "^7.28.3",
    "@types/jest": "^30.0.0",
    "@types/ramda": "^0.31.1",
    "@types/uuid": "^10.0.0",
    "babel-jest": "^30.1.2",
    "dependency-cruiser": "^17.0.1",
    "eslint": "^9.35.0",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "jest": "^30.1.3",
    "npm-run-all": "^4.1.5",
    "prettier": "3.6.2",
    "serverless": "^4.19.0",
    "ts-jest": "^29.4.2",
    "ts-loader": "^9.5.4",
    "typescript-eslint": "^8.44.0",
    "webpack": "^5.101.3",
    "webpack-cli": "^6.0.1"
  },
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "run-s clean transpile",
    "build:match-make": "run-s clean:webpack transpile:match-make",
    "build:sls": "run-s clean:sls transpile:sls",
    "clean": "run-s clean:*",
    "clean:sls": "rimraf .serverless",
    "clean:webpack": "rimraf .webpack",
    "code-format": "prettier . --write",
    "code-format-check": "prettier . --check",
    "coverage": "jest --coverage",
    "dependency-check": "run-s dependency-check:*",
    "dependency-check:src": "depcruise src",
    "dependency-check:test": "depcruise test",
    "lint": "eslint .",
    "lint-fix": "eslint --fix .",
    "serve:match-make": "node .webpack/match-making-polling.js",
    "start:match-make": "run-s build:match-make serve:match-make",
    "test": "jest",
    "transpile": "run-s transpile:*",
    "transpile:match-make": "webpack --config matchMake.webpack.config.js",
    "transpile:sls": "sls package",
    "type-check": "tsc --noEmit"
  }

{
  "name": "@gbraver-burst-network/core",
  "version": "0.2.0",
  "main": "lib/index.js",
  "author": "Y.Takeuchi",
  "files": [
    "lib"
  ],
  "license": "ISC",
  "scripts": {
    "build": "npm-run-all clean type-check lint lint:test test transpile copy-type-definition",
    "type-check": "flow check",
    "lint": "eslint src",
    "lint:test": "eslint test",
    "test": "ava -T 600000",
    "transpile": "babel src -d lib/",
    "copy-type-definition": "flow-copy-source src lib",
    "clean": "rimraf lib"
  },
  "devDependencies": {
    "@ava/babel": "^1.0.1",
    "@babel/cli": "^7.14.3",
    "@babel/core": "^7.14.3",
    "@babel/preset-env": "^7.14.4",
    "@babel/preset-flow": "^7.13.13",
    "@babel/register": "^7.13.16",
    "ava": "^3.15.0",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.27.0",
    "eslint-plugin-flowtype": "^5.7.2",
    "flow-bin": "^0.152.0",
    "flow-copy-source": "^2.0.9",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2"
  },
  "dependencies": {
    "gbraver-burst-core": "^1.6.0",
    "uuid": "^8.3.2"
  },
  "ava": {
    "babel": {
      "compileEnhancements": false
    },
    "files": [
      "test/src/**/*.js"
    ],
    "require": [
      "@babel/register"
    ]
  }
}

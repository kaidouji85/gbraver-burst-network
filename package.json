{
  "name": "root",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap --ci",
    "start:monolithic-server": "lerna run --scope @gbraver-burst-network/monolithic-server --stream --no-prefix start",
    "start:monolithic-server-production": "lerna run --scope @gbraver-burst-network/monolithic-server --stream --no-prefix start:production",
    "start:monolithic-stub": "lerna run --scope @gbraver-burst-network/monolithic-stub --stream --no-prefix start:production",
    "clean": "lerna run clean",
    "build": "npm-run-all build:core build:monolithic-server build:monolithic-browser build:monolithic-stub build:serverless",
    "build:docker": "npm-run-all clean build:core build:monolithic-server",
    "build:core": "lerna run --scope @gbraver-burst-network/core build",
    "build:monolithic-server": "lerna run --scope @gbraver-burst-network/monolithic-server build",
    "build:monolithic-browser": "lerna run --scope @gbraver-burst-network/monolithic-browser build",
    "build:monolithic-stub": "lerna run --scope @gbraver-burst-network/monolithic-stub build",
    "build:serverless": "lerna run --scope @gbraver-burst-network/serverless build",
    "serve:monolithic-server": "lerna run --scope @gbraver-burst-network/monolithic-server --stream --no-prefix serve",
    "serve:monolithic-server-production": "lerna run --scope @gbraver-burst-network/monolithic-server --stream --no-prefix serve:production",
    "serve:monolithic-stub": "lerna run --scope @gbraver-burst-network/monolithic-stub --stream --no-prefix serve"
  },
  "devDependencies": {
    "lerna": "^4.0.0",
    "npm-run-all": "^4.1.5"
  }
}
